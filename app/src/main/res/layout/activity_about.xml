<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".AboutActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/new_post_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></android.support.v7.widget.Toolbar>

        <ImageView
            android:id="@+id/gambarabout"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="20dp"
            android:background="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/new_post_toolbar"
            android:paddingTop="20dp"
            android:padding="20dp"
            android:src="@drawable/app_logo" />
        <TextView
            android:id="@+id/textabout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/gambarabout"
            app:layout_constraintTop_toBottomOf="@+id/gambarabout"
            android:layout_marginTop="21dp"
            android:padding="20dp"
            android:text="Traffic Sign Survey App adalah aplikasi untuk mengambil foto dengan informasi lokasi peta. Digunakan untuk melaporkan foto rambu-rambu dan keadaan yang ada dijalan raya."
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textabout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textversion"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:paddingTop="130dp"
            app:layout_constraintTop_toBottomOf="@+id/textabout"
            android:text="Dibuat oleh Soni Fauzan Maulana Â© 2018"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textversion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:paddingBottom="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textabout2"
            android:text="Versi Aplikasi 1.0"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

</android.support.constraint.ConstraintLayout>